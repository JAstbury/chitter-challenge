<h1>Messages</h1>

<% if current_user %>
  <form action='/new' method='post'>
    Message: <input type="text" name="message">
    <input type="submit" value='Submit'>
  </form>
<% else %>
  <form action="/users/new">
    <input type="submit" value="Sign up">
  </form>
<% end %>

<ul id='messages'>
  <% @messages.reverse.each { |message| %>
    <li>
      <%= message.message %><br/>
      <% date = message.created_at %>
      <%= date.strftime('%v')%>
      <%= date.strftime('%R')%>
    </li>
  <% } %>
</ul>
